{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}


  <link href="{{ asset('forgetPassword/css/request.css')}}" rel="stylesheet">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="levitate-body">
  <div class="levitate">
    <img class="h" src="{{asset('forgetPassword/lock.png')}}" alt='lock image'>
    </div>
    </div>
    <div class = 'child'>
    <h1>Réinitialisez votre mot de passe</h1>
    <br>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.login) }}
        <br>
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>
<br>
<div class = 'button_center'>
        <button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
        </div>
        <div class="text-danger">{{message}}</div>
    {{ form_end(requestForm) }}
    </div>

{% endblock %}
