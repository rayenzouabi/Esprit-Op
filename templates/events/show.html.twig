            </a>
          </li>
        {% endblock %}




{% block body %}
    <h1 style="margin-bottom: 15px; margin-left: 400px;">Events</h1>
    <br>
  

    <table class="table" style="margin-top: 20px;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>TitreE</th>
                <td>{{ event.titreE }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Lieninscrit</th>
                <td>{{ event.lieninscrit }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

   
    <div class="container mt-4" >
        <div class="row">
            <div class="col-md-6">
                <button type="button" class="btn btn-outline-success">
                    <a href="{{ path('app_events_edit', {'id': event.id}) }}" style="color: green;">Edit</a>
                </button>
            </div>
            <div class="col-md-6 text-md-right">
                <a href="{{ path('app_events_dash') }}" class="btn btn-link">Back to List</a>
            </div>
        </div>

        <hr class="my-4">

        <div class="row">
            <div class="col-md-12">
                {{ include('events/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
